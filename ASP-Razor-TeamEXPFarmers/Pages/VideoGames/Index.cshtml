@page
@model ASP_Razor_TeamEXPFarmers.Pages.VideoGames.IndexModel

@{
    Layout = "_StaffLayout";
    ViewData["Title"] = "List of Video Games";
}

<h1>List of Video Games</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Add New Video Game</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].CoverImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].PEGI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].DifficultyLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].MatureContentLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].MatureContentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].InStockQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VideoGame) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PEGI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifficultyLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatureContentLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatureContentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStockQuantity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VideoGameID"
                    class="btn btn-success">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.VideoGameID"
                    class="btn btn-info">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.VideoGameID"
                    class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
