@page
@model ASP_Razor_TeamEXPFarmers.Pages.Staffs.IndexModel

@{
    ViewData["Title"] = "Staff List";
}

<h1>Staff List</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Add New Staff</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].ContactNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PersonID"
                    class="btn btn-success">Edit</a> 
                <a asp-page="./Details" asp-route-id="@item.PersonID"
                    class="btn btn-info">Details</a> 
                <a asp-page="./Delete" asp-route-id="@item.PersonID"
                    class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
