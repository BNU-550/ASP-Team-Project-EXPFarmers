@model ASP_Razor_TeamEXPFarmers.Pages.MyAccountModel

@{
    ViewData["Title"] = "Customer Account";
    // TODO: Need to update third card with a _PaymentView (might need to scaffold Payment model first)
}

<header class="jumbotron">
    <h1>Customer Account</h1>
    <h2>@Model.Person.FullName</h2>
</header>

<div class="card-deck">

    <div class="card">
        <img src="~/images/profile.png" class="card-img-top"
            style="width:100%" alt="Profile Icon" />
        <partial name="Customers\_PersonView" model="Model.Person" />
        <a asp-page="Customers/Edit" asp-route-id="@Model.Person.PersonID"
            class="btn btn-success">Edit</a>
    </div>

    <div class="card">
        <img src="~/images/house.png" class="card-img-top"
            style="width:100%" alt="House Icon" />
        <partial name="Addresses\_AddressView" model="Model.Person.Address" />
        <a asp-page="Addresses/Edit" asp-route-id="@Model.Person.AddressID"
            class="btn btn-success">Edit</a>
    </div>

    <div class="card">
        <img src="~/images/paymentcard.png" class="card-img-top"
            style="width:100%" alt="Payment Card Icon" />
        <partial name="Customers\_PersonView" model="Model.Person" />
        <a asp-page="/Edit" asp-route-id="@Model.Person.PaymentID"
            class="btn btn-success">Edit</a>
    </div>

</div>

