@page
@model ASP_Razor_TeamEXPFarmers.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].IsCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].IsStaff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Payment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Person) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsStaff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment.PaymentCardNo)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PersonID" 
                class="btn btn-success btn-sm">Edit</a> 
                <a asp-page="./Details" asp-route-id="@item.PersonID" 
                class="btn btn-info btn-sm">Details</a> 
                <a asp-page="./Delete" asp-route-id="@item.PersonID" 
                class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
