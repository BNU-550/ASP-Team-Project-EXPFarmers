@page
@model ASP_Razor_TeamEXPFarmers.Pages.IndexModel

@{
    ViewData["Title"] = "DigiGame Video Game Listing";
    int colNo = 0;
}
<header class="jumbotron">
    <h1>DigiGame Video Game Listing</h1>
</header>

<section>        
    <div class="row">
        @foreach (var item in Model.VideoGame) 
        {
                if (colNo > 0 && colNo % 3 == 0)
                {
                    @:</div><div class="row">
                }
        
                <div class="col-lg-4">
                    <div class="card" style="width: 18rem;">
                      <img src="..." class="card-img-top" alt="...">
                      <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="#" class="btn btn-primary">View Game</a>
                      </div>
                    </div>
                </div>

                colNo++;
        }
    </div>
</section>
