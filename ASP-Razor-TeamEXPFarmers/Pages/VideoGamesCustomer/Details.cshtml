@page
@model ASP_Razor_TeamEXPFarmers.Pages.VideoGamesCustomer.DetailsModel

@{
    ViewData["Title"] = @Model.VideoGame.Title + " - DigiGame";
}

<header>
    <h1>@Model.VideoGame.Title</h1>
    <h5>Release Date: @Model.VideoGame.ReleaseDate</h5>
    <h5>Platform(s): @Model.VideoGame.Platforms / PEGI: @Model.VideoGame.PEGI</h5>
    <img src="/images/@Model.VideoGame.CoverImage" height=350 width=300 alt="Game cover">
</header>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.DifficultyLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.DifficultyLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.MatureContentLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.MatureContentLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.MatureContentDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.MatureContentDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.InStockQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.InStockQuantity)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success">Add to Basket</a> 
    <a class="btn btn-info" asp-page="../Index">Back to List</a>
</div>
