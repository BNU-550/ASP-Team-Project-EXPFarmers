@page
@model ASP_Razor_TeamEXPFarmers.Pages.Addresses.IndexModel

@{
    ViewData["Title"] = "Address Index";
}

<h1>Address List</h1>

<p>
    <a asp-page="Create">Add New Address</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].HouseNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].HouseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Postcode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Address) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AddressID" class="btn btn-success">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AddressID"class="btn btn-info">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AddressID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
